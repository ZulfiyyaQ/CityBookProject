@model CreateReservationVM

<form class="add-comment custom-form" method="post" asp-action="AddReservation" asp-controller="Listing">
    <fieldset>
        <div class="quantity fl-wrap">
            <span><i class="fa fa-user-plus"></i>Persons : </span>
            <div class="quantity-item">
                <input type="button" value="-" class="minus">
                <input type="text" name="Persons" title="Qty" class="qty" min="1" max="3" step="1" value="1">
                <input type="button" value="+" class="plus">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label><i class="fa fa-calendar-check-o"></i>  </label>
                <input type="text" placeholder="Date" asp-for="ReservationDate" class="datepicker" data-large-mode="true" data-large-default="true" />
            </div>
            @if (Model.DayOrMonth.Contains(DayOrMonth.Month.ToString()))
            {
                <div class="col-md-6">
                    <label><i class="fa fa-calendar-check-o"></i>  </label>
                    <input type="text" placeholder="Date" asp-for="ReservationDateTo" class="datepicker" data-large-mode="true" data-large-default="true" />
                </div>
            }
        </div>
        <textarea cols="40" rows="3" placeholder="Additional Information:" asp-for="About"></textarea>
    </fieldset>
    <button class="btn  big-btn  color-bg flat-btn book-btn">Book Now<i class="fa fa-angle-right"></i></button>
</form>