                                    <div class="listing-counter"><span>@item.Places.Count </span> Locations</div>
                                    <div class="listing-item-cat">
                                        <h3><a>@item.Name</a></h3>
                                        <p>@item.Description.Substring(10).LastIndexOf("...") </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- gallery-item end-->

                    </div>
                }

                <!-- portfolio end -->

            </div>
        </section>
        <!-- section end -->
        <!--section -->
        <section class="gray-section">
            <div class="container">
                <div class="section-title">
                    <h2>Popular listings</h2>
                    <div class="section-subtitle">Best Listings</div>
                    <span class="section-separator"></span>
                    <p>Nulla tristique mi a massa convallis cursus. Nulla eu mi magna.</p>
                </div>
            </div>
            <!-- carousel -->
            <div class="list-carousel fl-wrap card-listing ">
                <!--listing-carousel-->
                <div class="listing-carousel  fl-wrap ">
                    <!--slick-slide-item-->
                    @foreach (var item in Model.Places)
                    {
                        <div class="slick-slide-item">
                            <!-- listing-item -->
                            <div class="listing-item">
                                <article class="geodir-category-listing fl-wrap">
                                    <div class="geodir-category-img">
                                        <a asp-action="detail" asp-controller="listing" asp-route-di="@item.Id"> <img src="~/images/@item.PlaceImages.FirstOrDefault()?.ImageUrl" alt=""></a>
                                        <div class="overlay"></div>

                                    </div>
                                    <div class="geodir-category-content fl-wrap">
                                        <a class="listing-geodir-category" href="listing.html">@item.Category.Name</a>
                                        <div class="listing-avatar">
                                            <a href="author-single.html"><img src="~/images/@item.User.Image" alt="@item.User.Name"></a>
                                            <span class="avatar-tooltip">Added By  <strong>@item.User.Name @item.User.Surname</strong></span>
                                        </div>
                                        <h3><a asp-action="detail" asp-controller="listing" asp-route-di="@item.Id">@item.Name</a></h3>
                                        <p>@item.Description.Substring(10).LastIndexOf("...")  </p>
                                        <div class="geodir-category-options fl-wrap">
                                            <div class="listing-rating card-popup-rainingvis" data-starrating2="@* ortalama review bal *@">
                                                <span>(@item.Review.Count() reviews)</span>
                                            </div>
                                            <div class="geodir-category-location"><a href="#"><i class="fa fa-map-marker" aria-hidden="true"></i> @item.Address</a></div>
                                        </div>
                                    </div>
                                </article>
                            </div>
                            <!-- listing-item end-->
                        </div>
                    }



                </div>
                <!--listing-carousel end-->
                <div class="swiper-button-prev sw-btn"><i class="fa fa-long-arrow-left"></i></div>
                <div class="swiper-button-next sw-btn"><i class="fa fa-long-arrow-right"></i></div>
            </div>
            <!--  carousel end-->
        </section>
        <!-- section end -->
